<div class ="contents row">
  <div class="content_post">
    <% if user_signed_in? && current_user.id == @movie.user_id %>
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', "/movies/#{@movie.id}/edit", method: :get %>
          </li>
          <li>
            <%= link_to '削除', "/movies/#{@movie.id}", method: :delete %>
          </li>
        </ul>
      </div>
    <% end %>
    <%= simple_format(@movie.text) %>
    <span class="name">
      <%= @movie.title %>
      <span>投稿者</span><%= @movie.user.nickname %>
    </span>
  </div>
</div>