<div class="contents row">
  <% @movies.each do |movie| %>
    <%= render partial: "movie", locals: { movie: movie } %>
    <% if user_signed_in? %>
      <% if movie.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
          <p><span>お気に入りから解除 <%=link_to movie.favorites.count, movie_favorites_path(movie.id), method: :delete %></p>
      <% else %>
          <p><span>お気に入り登録する </span><%=link_to movie.favorites.count, movie_favorites_path(movie.id), method: :post %></p>
      <% end %>
    <% end %>
  <% end %>
  <%= paginate(@movies) %>
</div>